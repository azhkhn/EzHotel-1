<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.family.ezhotel">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ezhotel"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Payment.PaymentActivity"
            android:label="@string/title_activity_payment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CheckIO.CheckIOActivity"
            android:label="@string/title_activity_checkio"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Reservation.ReservationActivity"
            android:label="@string/title_activity_reservation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NoticeBoard.NoticeBoardActivity"
            android:label="Notice Board"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NoticeBoard.EditNoticeActivity"
            android:label="@string/txtEditNotice"
            android:parentActivityName=".NoticeBoard.NoticeBoardActivity" />
        <activity
            android:name=".Reservation.AddReservationActivity"
            android:label="@string/title_activity_addReservation"
            android:parentActivityName=".Reservation.ReservationActivity" />
        <activity
            android:name=".Reservation.EditReservationActivity"
            android:label="@string/title_activity_editReservation"
            android:parentActivityName=".Reservation.ReservationActivity" />
        <activity
            android:name=".Reservation.ReservationRecordActivity"
            android:label="@string/title_activity_reservationRecord"
            android:parentActivityName=".Reservation.ReservationActivity" />
        <activity
            android:name=".CheckIO.CheckInActivity"
            android:label="@string/title_activity_checki"
            android:parentActivityName=".CheckIO.CheckIOActivity" />
        <activity
            android:name=".CheckIO.CheckOutActivity"
            android:label="@string/title_activity_checko"
            android:parentActivityName=".CheckIO.CheckIOActivity" />
        <activity
            android:name=".CheckIO.CheckIORecordActivity"
            android:label="@string/txtChkInChkOutRecord"
            android:parentActivityName=".CheckIO.CheckIOActivity" />
        <activity
            android:name=".Payment.MakePaymentActivity"
            android:label="@string/txtMakePayment"
            android:parentActivityName=".Payment.PaymentActivity" />
        <activity
            android:name=".Payment.PaymentRecordActivity"
            android:label="@string/txtPaymentRecord"
            android:parentActivityName=".Payment.PaymentActivity" />

    </application>

</manifest>